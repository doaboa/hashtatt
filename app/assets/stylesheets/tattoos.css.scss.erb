.blackandwhite img {
    filter: grayscale(100%); /* Current draft standard */
    -webkit-filter: grayscale(100%); /* New WebKit */
    -moz-filter: grayscale(100%);
    -ms-filter: grayscale(100%); 
    -o-filter: grayscale(100%); /* Not yet supported in Gecko, Opera or IE */ 
    filter: url(resources.svg#desaturate); /* Gecko */
    filter: gray; /* IE */
    -webkit-filter: grayscale(1); /* Old WebKit */
}

.blackandwhite img:hover {
	filter: none;
	-webkit-filter: none; /* New WebKit */
    -moz-filter: none;
    -ms-filter: none; 
    -o-filter: none; /* Not yet supported in Gecko, Opera or IE */ 
    filter: url(resources.svg#desaturate); /* Gecko */
    filter: none; /* IE */
    -webkit-filter: none; /* Old WebKit */

}

.blackandwhite, .color {
	float:right;
}


body {
  background-image: url('brickwall.png')
}

#banner_img {
position: fixed;
top: 3em;
left: -10px;
padding: 0px;
width: 103%;
height: 200em;
z-index: 0;
background-image: url('hashtatban.png');
background-size: 100%;
background-repeat: no-repeat;
  
}

.masonry-brick { 
  width: 380px;
  @media (max-width: 460px) {width: 300px;} 
  margin: 10px;
  float: left; 
  z-index:1; }

#masonryContainer { 
  background-image: url('brickwall.png');
  position:relative;
  top: 30em;
  @media (max-width: 600px) {top:18em;}
  @media (min-width: 601px) and (max-width: 1000px) {top:22em;}
  width: 108%;
  bottom:0;
  scroll:auto;
  left: -15px;
  @media (max-width: 460px) {padding-left: 2%;}
  padding-left: 7%;
} 
.masonry-brick a {
  transition: opacity .2s linear;
}
.masonry-brick a:hover {
  opacity:0.8;
}

.hover-bar {
  bottom: 0;
  right: 0;
  position: absolute;
}

