<!-- Header and Nav -->
 <div class = "fixed">
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1>
          <%= link_to "# H A S H T A T", root_path %>
        </h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
 
    <section class="top-bar-section">
 
      <!-- Right Nav Section -->
      <ul class="right">
        <li>
            <%= link_to "About", about_path %>
        </li>
        <li class="has-dropdown">
            <%=link_to "Browse", root_path %>
            <ul class="dropdown">
              <li>
                <%= link_to 'Tattoos', root_path %>
              </li>
              <li>
                <%= link_to 'Tattoo Artists', artists_path %>
              </li>
        </ul> 
      </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to "Add a Tat", new_tattoo_path %>
          </li>
          <li id="search">
           <%= form_tag '/search', :method => :get do %>
            <%= text_field_tag :q, params[:q], :placeholder => "search" %>
          </li>
          <% end %>
          <li class="has-dropdown">
            <%=link_to current_user.username, user_path(current_user) %>

            <ul class="dropdown">

              <li>
                <%= link_to 'My User Profile', user_path(current_user) %>
              </li>
              <% if current_user.artist %>
                <li>
                  <%= link_to 'My Artist Profile', artist_path(current_user.artist.id) %>
                </li>
              <% else %>
                <li>
                  <%= link_to 'Create Artist Profile', new_artist_path %>
                </li>
              <% end %>
      
              <li>
              <%= link_to 'Settings', edit_user_registration_path %>
              </li>
              <li>
              <%= link_to 'Log out', destroy_user_session_path, :method=>'delete' %></li>
            <li>
          </ul>
        </li>
        <% else %>
          <li>
            <%= link_to "Quick Preview", preview_path %>
          </li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
 
 
  <!-- End Header and Nav -->


