<div id="banner_img">
</div>

<!-- Masonry Container -->
<div id="masonryContainer">
    <% if @tattoos %> 
      <% @tattoos.each do |tattoo| %>
        <div class="masonry-brick">
          <%= show_tattoo_photo(tattoo) %> 
          <%= like_button(tattoo, current_user) %>
        </div>
      <% end %>
     <% end %> 
</div>

  <% if cookies["seen_modal-#{current_user.id}"].nil? %>
    <% cookies.permanent["seen_modal-#{current_user.id}"] = true %>
    <div id="myModal" class="reveal-modal">
        <%= image_tag 'sailor_jerry.jpg', :class => "modal_back" %>
        <div class = "modal_text">
          <h2 class><span>Are You A Tattoo Artist?</span></h2>
          <p class="lead">
            <span>Create Your Online Portfolio Now.</span>
          </p>
        </div>
      
      <div class = 'modal_buttons'>
        <%=link_to "Yes, I'm an artist", new_artist_path, :class =>'button'%>
        <div class ='button closeModal'>No</div>
      </div>
      

      <a class="close-reveal-modal">&#215;</a>
    </div>
  <% end %>