<h2>My Account Settings</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :username, :label => "Username", :autofocus => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :label => "New password", :autocomplete => "off", :required => false %>
  <%= f.input :password_confirmation, :label => "Confirm new password", :required => false %>
  <% if f.object.encrypted_password.present? %>
  	<%= f.input :current_password, :label => "Current password", :required => true %>
  <% end %>
  <%= f.button :submit, 'Update my account', :class => 'small button' %>
<% end %>
<br />
<p>Too much ink for you? <%= link_to "Delete my account for eternity", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

